<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/submitButton"
        android:layout_width="261dp"
        android:layout_height="59dp"
        android:layout_marginStart="337dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="525dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveText" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="232dp"
        android:layout_height="66dp"
        android:layout_marginStart="368dp"
        android:layout_marginEnd="222dp"
        android:ems="10"
        android:inputType="text"
        android:text="First Name"
        app:layout_constraintBottom_toTopOf="@+id/saveText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <EditText
        android:id="@+id/saveText"
        android:layout_width="258dp"
        android:layout_height="75dp"
        android:layout_marginStart="357dp"
        android:layout_marginTop="545dp"
        android:ems="10"
        android:inputType="text"
        android:text="Thing you want to save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewSaved"
        android:layout_width="177dp"
        android:layout_height="64dp"
        android:layout_marginStart="369dp"
        android:layout_marginTop="895dp"
        android:text="View saved things"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="92dp"
        android:layout_height="61dp"
        android:layout_marginStart="575dp"
        android:layout_marginTop="806dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="413dp"
        android:text="Hey look im useless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>